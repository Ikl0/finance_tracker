<%#= form_with url: charts_show_path, local: true, method: :post do %>
<%#= form_tag("/show", method: "post") do  %>
<%= simple_form_for charts_path method: :post  do |f| %>
  <!--<form accept-charset="UTF-8" action="/charts/show" method="post">-->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
  <div class="container">
    <div class="row">
      <!-- BEGIN SEARCH RESULT -->
      <div class="col-md-12">
        <div class="grid search">
          <div class="grid-body">
            <div class="row">
              <!-- BEGIN FILTERS -->

              <div class="col-md-3">
                <h2 class="grid-title"><i class="fa fa-filter"></i> Filters</h2>
                <hr>
                <!-- BEGIN FILTER BY CHART TYPE -->
                <h4>Select object for analyze:</h4>
                <div class="btn-group" role="group" >
                  <%= f.collection_radio_buttons :object_for_analyze, [['Expences', 'Expences'] ,['Incomes', 'Incomes']], :first, :last,
                                                 :checked => ['Expences', 'Expences']  %>
                </div>
                <!-- BEGIN FILTER BY DATE -->
                <h4>By date:</h4>
                From
                <div class="input-group date form_date" data-date="2014-06-14T05:25:07Z" data-date-format="dd-mm-yyyy" data-link-field="dtp_input1">
                  <input type="text" class="form-control">
                  <span class="input-group-addon bg-blue"><i class="fa fa-th"></i></span>
                </div>
                <input type="hidden" id="dtp_input1" value="">

                To
                <div class="input-group date form_date" data-date="2014-06-14T05:25:07Z" data-date-format="dd-mm-yyyy" data-link-field="dtp_input2">
                  <input type="text" class="form-control">
                  <span class="input-group-addon bg-blue"><i class="fa fa-th"></i></span>
                </div>
                <input type="hidden" id="dtp_input2" value="">
                <!-- END FILTER BY DATE -->

                <!-- BEGIN FILTER BY CHART TYPE -->
                <div>
                  <span>Type of chart?</span>
                  <div class="btn-group" role="group" >
                    <%= f.collection_radio_buttons :type_of_chart, [['Pie', 'Pie'] ,['Column', 'Column']], :first, :last,
                                                   :checked => ['Pie', 'Pie']  %>
                  </div>
                </div>


                <!-- END FILTER BY CHART TYPE -->
                <!-- BEGIN FILTER BY CATEGORY -->
                <h4>By members:</h4>
                <div class="checkbox">
                  <label><input type="checkbox" class="icheck"> Me</label>
                </div>
                <div class="checkbox">
                  <label><input type="checkbox" class="icheck"> Member 1</label>
                </div>
                <div class="checkbox">
                  <label><input type="checkbox" class="icheck"> Member 2</label>
                </div>
                <!-- END FILTER BY CATEGORY -->

                <!--                <div class="btn btn-primary " >-->
                <%#= link_to 'Go', charts_show_path, style: 'color:#FFFFFF;' %>
                <!--                </div>-->
                <div class="mb-3">
                  <%= f.button :submit, "Go", class: "btn btn-primary" %>
                </div>

                <div class="padding"></div>


              </div>

              <!-- END FILTERS -->
              <!-- BEGIN RESULT -->
              <div class="col-md-9">
                <h2><i class="fa fa-file-o"></i> Result</h2>

                <div class="row">
                </div>

                <!-- BEGIN TABLE RESULT -->
                <div class="table-responsive">
                  <table class="table table-hover">
                    <tbody><tr>
                      <td>
                        <div class="chart-area">
                          <% if @type_of_chart == "Pie"%>
                          <%= pie_chart @chart_data%>
                            <% else %>
                            <%= column_chart @chart_data%>
                            <% end %>
                        </div>
                      </td>

                    </tr>


                    </tbody></table>
                </div>
                <!-- END TABLE RESULT -->

              </div>
              <!-- END RESULT -->
            </div>
          </div>
        </div>
      </div>
      <!-- END SEARCH RESULT -->
    </div>
  </div>

<% end %>