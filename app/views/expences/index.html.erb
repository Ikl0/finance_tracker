<br/>
<div class="container .text-primary">
    <h1 class="text-primary">Expences</h1>
</div>

<div class="container">
  <%= search_form_for @q do |f| %>
    <%= f.label :name_or_description_cont %>
    <%= f.search_field :name_or_description_cont %>
    <%= f.submit %>
  <% end %>
<br/>
      <table class="table table-hover" style="width: 700px">
        <thead>
        <tr>
          <th class="block" style="width:70%"><%= sort_link(@q, :name) %></th>
          <th class="block" style="width:10%"></th>
        </tr>
        </thead>
        <tbody>
        <% @expences.each do |expence| %>
        <% if expence.predefined? %>
          <tr class="text-secondary fw-bold">
            <td><%= expence.name %></td>
            <td></td>
        <% else %>
            <tr class="text-secondary font-weight-normal">
          <% end %>
          <% if not expence.predefined? %>
            <td><%= link_to expence.name, expence, style:'text-decoration:none' %></td>
            <td><%= link_to 'Delete', expence, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm' %></td>
          <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
  <%= link_to 'New Expence', new_expence_path, class:"btn btn-outline-primary"%>
</div>
