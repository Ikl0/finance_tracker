<p id="notice"><%= notice %></p>

<div class="container .text-primasry">
  <h1 class="text-primary">Expences</h1>
</div>

<div class="container">
  <%= search_form_for @q do |f| %>

    <%= f.label :name_or_description_cont %>
    <%= f.search_field :name_or_description_cont %>

    <%= f.submit %>
  <% end %>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered table-sm">
        <thead>
        <tr>
          <th class="block" style="width:70%">Name</th>
          <th class="block" style="width:10%"></th>
          <th class="block" style="width:10%"></th>
          <th class="block" style="width:10%"></th>
          </tr>
        </thead>

        <tbody>
        <% @expences.each do |expence| %>
        <% if expence.predefined? %>
          <tr class="text-success fw-bold">
        <% else %>
          <tr>
        <% end %>
            <td><%= expence.name %></td>
            <td><%= link_to 'Show', expence %></td>
          <% if not expence.predefined? %>
            <td><%= link_to 'Edit', edit_expence_path(expence) %></td>
            <td> <%= link_to 'Destroy', expence, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-decoration-none" %></td>
          <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="btn btn-primary" >
    <%= link_to 'New Expence', new_expence_path, style: 'color:#FFFFFF;' %>
  </div>
</div>
