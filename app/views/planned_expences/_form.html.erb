<%= form_for @planned_expence, html: { class: "form-vertical center" } do |form| %>
  <% if planned_expence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(planned_expence.errors.count, "error") %> prohibited this expence from being saved:</h2>
      <ul>
        <% planned_expence.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
