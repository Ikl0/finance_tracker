<p id="notice"><%= notice %></p>

<h1>Planned Expences</h1>

<table>
  <thead>
    <tr>
      <th>Expence</th>
      <th>Description</th>
      <th>Date</th>
      <th>Sent</th>
      <th>User</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planned_expences.each do |planned_expence| %>
      <tr>
        <td><%= planned_expence.expence_id %></td>
        <td><%= planned_expence.description %></td>
        <td><%= planned_expence.date %></td>
        <td><%= planned_expence.sent %></td>
        <td><%= planned_expence.user_id %></td>
        <td><%= planned_expence.amount %></td>
        <td><%= link_to 'Show', planned_expence %></td>
        <td><%= link_to 'Edit', edit_planned_expence_path(planned_expence) %></td>
        <td><%= link_to 'Destroy', planned_expence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

