<p id="notice"><%= notice %></p>
<div class="container .text-primary">
  <h1 class="text-primary">Operations</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8">
<table class="table table-bordered table-sm">
  <thead>
    <tr>
      <th>#</th>
      <th class="block" style="width:28%">Date</th>
      <th class="block" style="width:3%">Marked</th>
      <th class="block" style="width:50%">Comment</th>
      <th class="block" style="width:15%">Author</th>
      <th class="block" style="width:15%">Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operations.each do |operation| %>

    <tr>
        <td><%= operation.id %></td>
        <td><%= operation.date.strftime('%a, %d %b %Y %H:%M:%S') %></td>
        <% if operation.marked? %>
          <td class="img-responsive center-block d-block mx-auto">
          v
        <% else %>
          <td>
        <% end %>
        <td><%= operation.comment %></td>
        <td><%= author(operation.user_id) %></td>
        <td><%= operation_sum(operation.id) %></td>
        <td><%= link_to 'Show', operation %></td>
        <td><%= link_to 'Edit', edit_operation_path(operation) %></td>
        <td><%= link_to 'Destroy', operation, method: :delete, data: { confirm: 'Are you sure?' } , class: "text-decoration-none"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
  <div class="btn btn-primary" >
    <%= link_to 'New Operation', new_operation_path, style: 'color:#FFFFFF;' %>
  </div>
</div>



