  <table class="table">
    <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Surname</th>
      <th scope="col">Email</th>
      <th scope="col">Parent</th>
    </tr>
    </thead>
    <% @family.each do |f| %>
        <tr>
          <td><%= f.name %></td>
          <td><%= f.surname %></td>
          <td><%= f.email %></td>
          <td>
          <% if f.family_parent? %>
            <%= image_tag('flag.png', size: "24x24")%>
          <% end %>
          </td>
        </tr>
    <% end %>
  </table>