<p id="notice"><%= notice %></p>

<div class="container .text-primasry">
  <h1 class="text-primary">Incomes</h1>
</div>

<div class="container">
  <%= search_form_for @q do |f| %>
    <%= f.label :name_or_description_cont %>
    <%= f.search_field :name_or_description_cont %>
    <%= f.submit %>
  <% end %>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered table-sm">
        <thead>
        <tr>
          <th class="block" style="width:70%"><%= sort_link(@q, :name) %></th>
          <th class="block" style="width:10%"></th>
          <th class="block" style="width:10%"></th>
          <th class="block" style="width:10%"></th>
        </tr>
        </thead>

        <tbody>
        <% @incomes.each do |income| %>
          <% if income.predefined? %>
            <tr class="text-success fw-bold">
          <% else %>
            <tr>
          <% end %>
          <td><%= income.name %></td>
          <td><%= link_to 'Show', income %></td>
          <% if not income.predefined? %>
            <td><%= link_to 'Edit', edit_income_path(income) %></td>
            <td> <%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' },
                             class: "text-decoration-none" %></td>
          <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="btn btn-primary" >
    <%= link_to 'New income', new_income_path, style: 'color:#FFFFFF;' %>
  </div>
</div>
