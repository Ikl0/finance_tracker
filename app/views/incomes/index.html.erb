<br/>
<div class="container .text-primasry">
  <h1 class="text-primary">Incomes</h1>
</div>

<div class="container">
  <%= search_form_for @q do |f| %>
    <%= f.label :name_or_description_cont %>
    <%= f.search_field :name_or_description_cont %>
    <%= f.submit %>
  <% end %>
<br/>
  <table class="table table-hover" style="width: 700px">
        <thead>
        <tr>
          <th class="block" style="width:70%"><%= sort_link(@q, :name) %></th>
          <th class="block" style="width:10%"></th>
        </tr>
        </thead>
        <tbody>
        <% @incomes.each do |income| %>
          <% if income.predefined? %>
            <tr class="text-success fw-bold">
              <td><%= income.name %></td>
              <td></td>
          <% else %>
            <tr class="text-primary font-weight-normal">
          <% end %>
          <% if not income.predefined? %>
            <td><%= link_to income.name, income, style:'text-decoration:none' %></td>
            <td><%= link_to 'Delete', income, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm' %></td>
          <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
  <%= link_to 'New Income', new_income_path, class:"btn btn-outline-info"%>
</div>
